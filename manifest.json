{
  "manifest_version": 2,

  "name": "Twitter Notifier",
  "description": "A Simple Chrome Extension that notifies you of any new Twitter Notification.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Twitter Notifier"
  },
  "background": {
    "page": ["background.html"]
  },
  "permissions": [
    "notifications",
    "https://twitter.com/i/notifications"
  ]
}
